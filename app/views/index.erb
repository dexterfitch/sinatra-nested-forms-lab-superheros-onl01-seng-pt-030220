<h1>Create a Team and Heroes!</h1>
<form action="/teams" method="post">
  <label for="name">Team Name:</label>
  <input id="name" type="text" name="team[name]"><br>

  <label for="motto">Team Motto:</label>
  <input id="motto" type="text" name="team[motto]"><br>

  <h3>First Hero</h3>
  <label for="member1_name">Hero's Name:</label>
  <input id="member1_name" type="text" name="team[members][][name]"><br>

  <label for="member1_power">Hero's Power:</label>
  <input id="member1_power" type="text" name="team[members][][power]"><br>

  <label for="member1_bio">Hero's Bio:</label>
  <input id="member1_bio" type="text" name="team[members][][bio]"><br>

  <h3>Second Hero</h3>
  <label for="hero_name2">Hero's Name:</label>
  <input id="hero_name2" type="text" name="team[members][][name]"><br>

  <label for="hero_power2">Hero's Power:</label>
  <input id="hero_power2" type="text" name="team[members][][power]"><br>

  <label for="hero_bio2">Hero's Bio:</label>
  <input id="hero_bio2" type="text" name="team[members][][bio]"><br>

  <h3>Third Hero</h3>
  <label for="hero_name3">Hero's Name:</label>
  <input id="hero_name3" type="text" name="team[members][][name]"><br>

  <label for="hero_power3">Hero's Power:</label>
  <input id="hero_power3" type="text" name="team[members][][power]"><br>

  <label for="hero_bio3">Hero's Bio:</label>
  <input id="hero_bio3" type="text" name="team[members][][bio]"><br>

  <button type="submit" value="Submit">Submit</button>
</form>
